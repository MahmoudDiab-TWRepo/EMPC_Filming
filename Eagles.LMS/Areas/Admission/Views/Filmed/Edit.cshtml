@model Filmed
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admission/Views/Shared/_Layout.cshtml";
    var requestStatus = TempData.Peek("RequestStatus") as RequestStatus;

}
@section EndHeader{
    <style>
        .ImagesGroup .ImageItem .DeletemainImg {
            position: absolute;
            top: 15px;
            right: 15px
        }

            .ImagesGroup .ImageItem .DeletemainImg .btn_delete {
                display: block;
                width: 45px;
                height: 45px;
                background-color: #f46a6acc;
                border-color: #f46a6a;
                text-align: center;
                line-height: 45px;
                border-radius: 50%;
                color: #fff;
                padding: 0;
                font-size: 19px;
                cursor: pointer;
                transition: all .4s ease-in-out;
            }

                .ImagesGroup .ImageItem .DeletemainImg .btn_delete:hover {
                    background-color: #f46a6a;
                }
    </style>

}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Edit New</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Admission/Filmed">Home</a></li>
                        <li class="breadcrumb-item active">Edit Filmed</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        <div class="MaxOrder">
            <div class="alert-danger">
                Max-Order : @ViewBag.MaxOrder
            </div>


        </div>
        @using (Html.BeginForm("Edit", "Filmed", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(s => s.Id)
            @Html.HiddenFor(s => s.MainImage)
            @Html.HiddenFor(s => s.CreatedTime)
            @Html.HiddenFor(s => s.UserCreateId)
            @Html.HiddenFor(s => s.Status)

            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">



                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="row">

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Title Arabic</label>
                                            @Html.TextBoxFor(s => s.TitleArabic, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Title Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Title English</label>
                                            @Html.TextBoxFor(s => s.TitleEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Title English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleEnglish)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Type Arabic</label>
                                            @Html.TextBoxFor(s => s.TypeArabic, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Type Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Type English</label>
                                            @Html.TextBoxFor(s => s.TypeEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Type English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleEnglish)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Description AR</label>
                                            @Html.TextAreaFor(s => s.DescriptionArabic, new
                                       {
                                           @class = "form-control textarea",
                                           placeholder = "Description Arabic",
                                           //@required = "required"
                                       })

                                           @class = "form-control",
                                           placeholder = "language Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Language English</label>
                                            @Html.TextBoxFor(s => s.LanguageEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "language English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleEnglish)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Subtitle Arabic</label>
                                            @Html.TextBoxFor(s => s.SubtitleArabic, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Subtitle Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Subtitle English</label>
                                            @Html.TextBoxFor(s => s.SubtitleEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Subtitle English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleEnglish)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Audio Langauge Arabic</label>
                                            @Html.TextBoxFor(s => s.AudioLanguageArabic, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Audio Language Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Audio Language English</label>
                                            @Html.TextBoxFor(s => s.AudioLanguageEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Audi Language English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleEnglish)*@
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Genre Arabic</label>
                                            @Html.TextBoxFor(s => s.GenreArabic, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Genre Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Genre English</label>
                                            @Html.TextBoxFor(s => s.GenreEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Genre English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleEnglish)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Views Number</label>
                                            @Html.TextBoxFor(s => s.ViewsNumber, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Views Number"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Run Time</label>
                                            @Html.TextBoxFor(s => s.RunTime, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Run Time"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Release Date</label>
                                            @Html.TextBoxFor(s => s.ReleaseDate, null, new
                                       {
                                           @class = "form-control",
                                           type = "date",
                                           @id = "RelaseDate",
                                           @required = "required",
                                           placeholder = "ReleaseDate"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.NewsDate)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="mb-3">
                                                    <label for="uploadattachments" class="form-label">Main Image <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:1520px, H:850px)</span></label>
                                                    <input class="form-control" name="uploadattachments" type="file" id="uploadattachments">
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <div class="mb-3">
                                                    @if (Model != null && Model.MainImage != null && Model.MainImage != "")
                                                    {
                                                        <div id="box_mainImg" class="row">
                                                            <div class="col-lg-4">
                                                                <div class="ImagesGroup">
                                                                    <div class="ImageItem">
                                                                        <div class="Images">
                                                                            <img src="@Model.MainImage" />
                                                                        </div>
                                                                        <div class="DeletemainImg">
                                                                            <a class="btn_deleteMainImage" data-id="@Model.Id"><i class="bx bx-trash"></i></a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label for="uploadattachments_multi" class="form-label">
                                                Filmed Images [Optional] <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:1520px, H:850px)</span>
                                            </label>
                                            <input multiple class="form-control" name="uploadattachments_multi" type="file" id="uploadattachments_multi">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="mb-3">

                                            @if (Model.FilmedImages != null && Model.FilmedImages.Any())
                                            {
                                                <label class="form-label">Filmed Images</label>
                                                <div class="ImagesGroup">
                                                    <div class="row">
                                                        @foreach (var item in Model.FilmedImages)
                                                        {
                                                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 parentBox">
                                                                <div class="ImageItem">
                                                                    <div class="Images">
                                                                        <img src="@item.Path" />
                                                                    </div>
                                                                    <div class="DeleteBtn">
                                                                        <a class=" btn_delete" data-id="@item.Id"><i class="bx bx-trash"></i></a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-check form-check-primary mb-3">
                                            @Html.CheckBoxFor(s => s.ShowInHomePage, new
                                       {
                                           @class = "form-check-input",
                                           @id = "ckekshow",
                                           placeholder = "Show In Home Page"
                                       })
                                            <label for="ckekshow" class="form-label" style="cursor:pointer;">Show In Home Page</label>

                                        </div>
                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="mb-3">
                                                    <label class="form-label">Filmed Iframe</label>
                                                    @Html.TextBoxFor(s => s.VideoIframe, null, new
                                               {
                                                   @class = "form-control",
                                                   placeholder = "Service Iframe"
                                               })
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                @if (Model != null && Model.VideoIframe != null)
                                                {
                                                    @*<a href="@Model.Image" class="btn btn-info" target="_blank">Open Video</a>*@
                                                    <a href="@Model.VideoIframe" class="video-btn btn btn-info" data-type="iframe" tabindex="0">
                                                        Watch Video
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div> <!-- end col -->


            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="foooterbuttons">
                            <button type="submit" OnClick="return validate();" class="btn btn-success waves-effect waves-light">
                                <i class="bx bx-check-double font-size-16 align-middle me-2"></i> @Resources.Global.Save
                            </button>
                            <a href="/Admission/Filmed" class="btn btn-danger waves-effect waves-light">
                                <i class="fa fa-backspace back font-size-16 align-middle me-2"></i> @Resources.Global.Back
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>

</div>


@section EndBody{



    <script type="text/javascript">
        function validate() {
            var _RelaseDate = document.getElementById('RelaseDate').value;
            if (_RelaseDate == "") {

                notify = $.notify({
                    message: 'Pls Enter Date',

                }, {

                    type: 'NewsDate' == 'Created' ? "success" : "danger",
                    animate: {
                        enter: 'animated flipInY',
                        exit: 'animated flipOutX',
                    }
                });

                return false;
            }
        }
    </script>




    <script>
        $(function () {

  $("body").on("click", ".btn_delete", (s) => {
                let self = $(s.currentTarget),
                    entityId = self.attr('data-id');
                bootbox.confirm("@Resources.Global.ConfirmDeleteoperation !", function (flag) {
                    if (flag) {
                        $.ajax({
                            type: "POST",
                            url: "/api/GlobalServices/RemoveFilmedImg?id=" + entityId+"",
                            success: (response) => {
                                toastr.success('@Resources.Global.Theunithasbeensuccessfullydeleted', '', { timeOut: 10000 });
                                self.closest('.parentBox').remove();
                            }, error: (error) => {
                                // unauthorize
                                let errorMessage = manageAjaxError(error);
                                pushNotification("danger", errorMessage);
                            }
                        });
                    }
                })
            });
        });

        $("body").on("click", ".btn_deleteMainImage", (s) => {
            let self = $(s.currentTarget),

                    entityId = self.attr('data-id');
                bootbox.confirm("@Resources.Global.ConfirmDeleteoperation !", function (flag) {
                    if (flag) {
                        $.ajax({
                            type: "POST",
                            url: "/api/GlobalServices/RemoveFilmedMainImg?id=" + entityId+"",
                            success: (response) => {
                                toastr.success('@Resources.Global.Theunithasbeensuccessfullydeleted', '', { timeOut: 10000 });
                                $('#box_mainImg').remove();
                                location.reload();
                                location.reload;
                                }, error: (error) => {
                                // unauthorize
                                let errorMessage = manageAjaxError(error);
                                pushNotification("danger", errorMessage);
                            }
                        });
                    }
                })
            });




    </script>


    @if (requestStatus != null)
    {

        <script>

              notify = $.notify({
                  message: '@requestStatus.Message',

              }, {

                  type: '@requestStatus.Status' == 'Edited' ? "success" :"danger",
                      animate: {
                          enter: 'animated flipInY',
                          exit: 'animated flipOutX',
                      }
                  });
        </script>

        TempData.Remove("RequestStatus");
    }
}



@{
    ViewBag.Title = "Procedures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Eagles.LMS.BLL
@using Eagles.LMS.App_GlobalResources

@section metatags{
    <meta name="keywords" id="metaKeyword" content="About empcnews, Who We Are, Empc Facility, news, empc, " />
    <meta name="description" id="metaDesc" content="Non-stop news coverage of the most important local and international events" />
    <link rel="canonical" id="canonicalUrl" href="https://www.empcnews.com" />
}

@{
    UnitOfWork ctx = new UnitOfWork();
    var Procedures = ctx.ProceduresManager.GetAll().FirstOrDefault();
    bool en = true;

    if (Request.Cookies["Language"] != null)
    {
        en = (Request.Cookies["Language"].Value.ToString() == "en") ? true : false;

    }



}

@section EndHeader{
    <style>
        .main-menu nav ul .active3 a {
            color: #e50916 !important;
        }
    </style>
}
<!-- Page Tile -->
<div class="PageSectionTitle" style="background-image: url('/assets_New_Puplic/img/NewImg/Location/asset-21.jpg')">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <div class="gen-breadcrumb-title">
                        <h1>
                            Our Procedures
                        </h1>
                    </div>
                    <div class="gen-breadcrumb-container">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/Home"><i class="fas fa-home mr-2"></i>@Resources.Global.Home</a>
                            </li>
                            <li class="breadcrumb-item active">@Resources.Global.services   </li>
                        </ol>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Page Title -->


<div class="about-area pt-80 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-6 mt-50">
                <div class="about-wrapper mb-30 ">
                    @if (en)
                    {
                        <div class="section-title">
                            <h1>@Procedures.TitleEnglish</h1>
                            <p>@Html.Raw(Procedures.DescriptionEnglish)</p>
                        </div>
                    }
                    else
                    {
                        <div class="section-title">
                            <h1>@Procedures.TitleArabic</h1>
                            <p>@Html.Raw(Procedures.DescriptionEnglish)</p>
                        </div>
                    }

                    @*<div class="about-button" style="display: none">
                            <a class="btn" href="#">Read More <i class="far fa-long-arrow-right"></i></a>
                        </div>*@
                </div>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="about-img mb-30">
                    <img src="@Procedures.Image" alt="">
                </div>
            </div>
        </div>
    </div>
</div>


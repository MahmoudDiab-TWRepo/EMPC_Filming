@section EndHeader{

    <style>
        .main-menu nav ul .active3 a {
            color: #e50916 !important;
        }
    </style>
    <link href="~/assets_NewPublic/libs/magnific-popup/magnific-popup.css" rel="stylesheet" />
}



<!-- Page Tile -->
<div class="PageSectionTitle" style="background-image: url('/assets_New_Puplic/img/NewImg/Location/asset-21.jpg');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <div class="gen-breadcrumb-title">
                        @if (en)
                        {
                            <h1>@Model.TitleEnglish</h1>
                        }
                        else
                        {
                            <h1>@Model.TitleArabic</h1>
                        }
                    </div>
                    <div class="gen-breadcrumb-container">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/Home"><i class="fas fa-home mr-2"></i>@Resources.Global.Home</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/Home/Services">@Resources.Global.services</a>
                            </li>
                        </ol>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Page Title -->
<!-- about-area-start -->
<div class="about-area DocumentsPage pt-50 pb-50" style="">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-6">
                <div class="about-wrapper mb-30">
                    <div class="section-title">
                        @if (en)
                        {
                            <h2>@Model.TitleEnglish</h2>
                            <p>@Html.Raw(@Model.DescriptionEnglish)</p>
                        }
                        else
                        {
                            <h2>@Model.TitleArabic</h2>
                            <p>@Html.Raw(@Model.DescriptionArabic)</p>
                        }

                    </div>
                    <div class="about-button" style="display: none">
                        <a class="btn" href="#">Read More <i class="far fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="about-img mb-30">
                    @if (!string.IsNullOrEmpty(Model.MainImage))
                    {
                        <div class=" imagsBG" style="background-image: url(@Model.MainImage)"></div>
                    }
                    else
                    {
                        <div class=" imagsBG" style="background-image: url(/assets_NewPublic/img/NewImg/BG/about3.jpg)"></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>





@section EndBody{

}
